<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Section -->
            <TextView
                android:id="@+id/tvProfileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="16dp" />

            <!-- Image (Profile Picture) -->
            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile"
                android:layout_marginTop="16dp"
                android:padding="16dp"/>

            <!-- Description -->
            <TextView
                android:id="@+id/tvProfileDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description_profile"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <!-- Contact Section -->
            <TextView
                android:id="@+id/tvContactTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginTop="16dp"/>

            <!-- Call Phone -->
            <Button
                android:id="@+id/btnCallPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Phone"
                android:layout_marginTop="16dp"/>

            <!-- Send Mail -->
            <Button
                android:id="@+id/btnSendMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Mail"
                android:layout_marginTop="8dp"/>

            <!-- Instagram ImageView -->
            <ImageView
                android:id="@+id/ivInstagram"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/instagram_icon"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="8dp"/>

            <!-- Find Me Section -->
            <TextView
                android:id="@+id/tvFindMeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Me"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginTop="16dp"/>

            <!-- Map View -->
            <fragment
                android:id="@+id/mapFragment"

                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"/>

            <!-- About Section -->
            <TextView
                android:id="@+id/tvAboutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginTop="16dp"/>

            <!-- Custom About Dialog -->
            <Button
                android:id="@+id/btnAboutDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Version Application"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
